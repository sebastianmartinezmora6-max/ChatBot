import discord
from discord.ext import commands

# Intents
intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='$', intents=intents)

#comando ambiental
@bot.command()
async def canecas_basura(ctx):
    colores = [
        "Azul → Papel y cartón",
        "Verde → Orgánicos",
        "Gris o negro → No reciclables"
    ]
    await ctx.send("\n".join(colores))

@bot.command()
async def arboles(ctx):
    await ctx.send("Árboles → Producen oxígeno y ayudan a combatir el cambio climático")

@bot.command()
async def reciclaje(ctx):
    await ctx.send("Reciclaje → Reduce residuos y protege los recursos naturales")

@bot.command()
async def agua(ctx):
    await ctx.send("Agua → Recurso vital que debemos cuidar y no desperdiciar")

@bot.command()
async def energia(ctx):
    await ctx.send("Energía → Permite el funcionamiento de la vida, el movimiento, la tecnología y los procesos naturales como la fotosíntesis y el clima ayudan al planeta")

@bot.command()
async def animales(ctx):
    await ctx.send("Animales → Parte esencial de los ecosistemas")

@bot.command()
async def Oxígeno(ctx):
    await ctx.send("Es un gas esencial para la vida: lo usamos para respirar y producir energía en nuestras células")

# Ejecutar bot
bot.run("Token")
